# Database Configuration
POSTGRES_USER=paint_user
POSTGRES_PASSWORD=paint_password
POSTGRES_DB=paint_catalog
DATABASE_URL=postgresql://paint_user:paint_password@localhost:5432/paint_catalog

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
EMBEDDING_MODEL=text-embedding-ada-002
MAX_TOKENS=150
TEMPERATURE=0.7

# Application Configuration
ENVIRONMENT=development
CRUD_API_URL=http://localhost:8000
AI_SERVICE_URL=http://localhost:8001

# Chat & Conversation Limits
AGENT_MAX_ITERATIONS=6
AGENT_MAX_EXECUTION_TIME=30
CONVERSATION_MAX_CACHE_SIZE=100
CONVERSATION_MAX_USER_SESSIONS=50

# Optional: DALL-E Configuration (for stretch goal)
ENABLE_DALLE=false